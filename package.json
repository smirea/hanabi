{
  "name": "hanabi",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "bun --port ${PORT:-3000} ./src/index.html",
    "dev": "bun --hot --port ${CLIENT_PORT:-3000} ./src/index.html",
    "build": "bun build ./src/index.html --outdir ./dist --minify",
    "preview": "bun run build && cd dist && bun --port ${PORT:-3000} ./index.html",
    "lint": "bunx oxlint --fix .",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test --pass-with-no-tests",
    "test:ui": "bunx --bun vitest run --passWithNoTests"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "trystero": "^0.21.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^26.1.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
